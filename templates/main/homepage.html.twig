{% extends 'base.html.twig' %}

{% block body %}

    <!-- search bar -->
    <div class="temp">

        <div class="row height d-flex justify-content-center align-items-center">

            <div class="col-md-6">

                <div class="form">
                    <i class="fa fa-search"></i>
                    <input name="search" type="search" class="form-control form-input" placeholder="Search anything...">
                    <span class="left-pan"><button class="btn btn-light" type="submit">Search</button></span>

                </div>

            </div>

        </div>

    </div>
    <!-- table content -->
    <div class="col-sm-12 col-xxl-10">
    <div class="bg-light rounded h-200 p-4">
        <h5 class="mb-4"><span>YAMDB:</span> Yet Another Movie Database</h5>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Director</th>
                <th scope="col">Year produced</th>
                <th scope="col">Synopsis</th>
            </tr>
            </thead>
            <tbody>

            {% for movie in movies %}

                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td class="fw-bold">{{  movie.title }}</td>
                    <td>{{ movie.director }}</td>
                    <td>{{ movie.release_date }}</td>
                    <td>{{ movie.overview }}</td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}